# Talon Production Environment Template
# Copy this file to .env.production and fill in the values

# Core Configuration
NODE_ENV=production
PORT=10000

# OpenClaw Gateway Connection
GATEWAY_URL=https://srv1325349.tail657eaf.ts.net:5050
GATEWAY_TOKEN=your-gateway-token-here

# Talon API (Agent Workspaces)
TALON_API_URL=https://your-cloudflare-tunnel.trycloudflare.com
TALON_API_TOKEN=your-talon-api-token

# Semantic Search (LanceDB + OpenAI)
OPENAI_API_KEY=sk-proj-your-openai-key-here

# Authentication (Generate a secure random token)
TALON_AUTH_TOKEN=your-secure-auth-token-here

# LanceDB Storage (Render/Docker path)
LANCEDB_PATH=/opt/render/project/.lancedb

# Optional: Logging and Monitoring
LOG_LEVEL=info
ENABLE_TELEMETRY=false

# Optional: Performance Tuning
CACHE_TTL_SESSIONS=10000
CACHE_TTL_AGENTS=60000  
CACHE_TTL_SEARCH=300000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100